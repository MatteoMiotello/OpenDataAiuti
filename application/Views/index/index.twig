{% extends 'common.twig' %}

{% block content %}
    <section class="text-gray-600 body-font">
        <div class="container mx-auto flex flex-col px-5 py-24 justify-center items-center">
            <img class="lg:w-2/6 md:w-3/6 w-5/6 mb-10 object-cover object-center rounded" alt="hero"
                 src="https://dummyimage.com/720x600">
            <div class="w-full md:w-2/3 flex flex-col mb-16 items-center text-center">
                <h1 class="title-font sm:text-4xl text-3xl mb-4 font-medium text-gray-900">Ricerca</h1>
                <p class="mb-8 leading-relaxed">Inserisci il codice fiscale dell'azienda per poter generare il relativo
                    file Excel contenente i risultati relativi.</p>
                <form action="/details" class="flex w-full justify-center items-end" method="post">
                    <div class="relative mr-4 lg:w-full xl:w-1/2 w-2/4 md:w-full text-left">
                        <label for="cf" class="leading-7 text-sm text-gray-600">Inserisci Cod. Fiscale</label>
                        <input type="text" id="cf" name="cf"
                               class="w-full bg-gray-100 bg-opacity-50 rounded focus:ring-2 focus:ring-indigo-200 focus:bg-transparent border border-gray-300 focus:border-indigo-500 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
                    </div>
                    <input type="submit"
                           class="inline-flex text-white bg-indigo-500 border-0 py-2 px-6 focus:outline-none hover:bg-indigo-600 rounded text-lg"
                           value="Cerca"></input>
                </form>
                <p class="text-sm mt-2 text-gray-500 mb-8 w-full">La ricerca funziona solo inserendo il codice fiscale
                    esatto.</p>
            </div>
        </div>
    </section>
{% endblock %}